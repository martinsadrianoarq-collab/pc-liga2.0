{
  "name": "ligasim-2000",
  "private": true,
  "version": "1.0.0",
  "description": "LigaSim 2000 - Football Manager",
  "author": "Manager",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
    "dist": "npm run build && electron-builder --mac"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "lucide-react": "^0.561.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-pwa": "^0.19.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ligasim2000.app",
    "productName": "LigaSim 2000",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.simulation-games",
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns"
    }
  }
}